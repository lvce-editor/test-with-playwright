{
  "name": "@lvce-editor/test-with-playwright-worker",
  "version": "0.0.0-dev",
  "description": "Worker package for test-with-playwright",
  "repository": {
    "type": "git",
    "url": "git@github.com:lvce-editor/test-with-playwright.git",
    "directory": "packages/test-with-playwright-worker"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/workerMain.ts",
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    }
  },
  "dependencies": {
    "@lvce-editor/assert": "^1.5.1",
    "@lvce-editor/rpc": "^5.5.0",
    "@lvce-editor/rpc-registry": "^8.6.0",
    "@lvce-editor/verror": "^1.7.0",
    "@playwright/test": "1.58.2",
    "get-port": "^7.1.0"
  },
  "engines": {
    "node": ">=24"
  }
}
