{
  "name": "e2e",
  "version": "0.0.0-dev",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "e2e": "node --unhandled-rejections=warn --experimental-vm-modules ../../node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "e2e:watch": "node --unhandled-rejections=warn --experimental-vm-modules ../../node_modules/jest/bin/jest.js --detectOpenHandles --forceExit --watch"
  },
  "jest": {
    "testTimeout": 30000,
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.10.0"
  }
}
